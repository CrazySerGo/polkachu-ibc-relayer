[[chains]]
id = 'centauri-1'
rpc_addr = 'http://{{ composable_ip }}:22257'
grpc_addr = 'http://{{ composable_ip }}:22290'
websocket_addr = 'ws://{{ composable_ip }}:22257/websocket'

rpc_timeout = '20s'
account_prefix = 'centauri'
key_name = '{{ key_name }}'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 300000
max_gas = 120000000
gas_price = { price = 0.00, denom = 'ppica' }
gas_multiplier = 1.4
max_msg_num = 30
max_tx_size = 1800000
clock_drift = '15s'
max_block_time = '10s'
trusting_period = '7days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }


[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', 'channel-4'], # Cosmos
  ['transfer', 'channel-3'], # Osmosis
]