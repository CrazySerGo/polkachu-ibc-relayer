[[chains]]
id = 'archway-1'
rpc_addr = 'http:/{{ archway_ip }}:11557'
grpc_addr = 'http:/{{ archway_ip }}:11590'
websocket_addr = 'ws:/{{ archway_ip }}:11557/websocket'

rpc_timeout = '10s'
account_prefix = 'archway'
key_name = '{{ key_name }}'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 200000
max_gas = 10000000
gas_price = { price = 1000000000000, denom = 'aarch' }
gas_multiplier = 1.3
max_msg_num = 30
max_tx_size = 2097152
clock_drift = '25s'
max_block_time = '10s'
trusting_period = '14days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }


[chains.packet_filter]
policy = 'allow'
list = [
    ['transfer', 'channel-2'], # Axelar
    ['transfer', 'channel-0'], # Cosmos
    ['transfer', 'channel-3'], # Jackal
    ['transfer', 'channel-1'], # Osmosis
    ['transfer', 'channel-5'], # Persistence
    ['transfer', 'channel-4'], # Umee
]
