[[chains]]
id = 'neutron-1'
rpc_addr = 'http://{{ neutron_ip }}:19157'
grpc_addr = 'http://{{ neutron_ip }}:19190'
websocket_addr = 'ws://{{ neutron_ip }}:19157/websocket'

rpc_timeout = '20s'
account_prefix = 'neutron'
key_name = '{{ key_name }}'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 500000
max_gas = 1000000
gas_price = { price = 0.01, denom = 'untrn' }
gas_multiplier = 1.8
max_msg_num = 30
max_tx_size = 2097152
clock_drift = '1000s'
max_block_time = '10s'
trusting_period = '14days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }

[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', 'channel-1'], # Cosmos
]