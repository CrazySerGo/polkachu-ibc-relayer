[[chains]]
id = 'elgafar-1'
rpc_addr = 'http://{{ testnet_stargaze_ip }}:13757'
grpc_addr = 'http://{{ testnet_stargaze_ip }}:13790'
websocket_addr = 'ws://{{ testnet_stargaze_ip }}:13757/websocket'

rpc_timeout = '20s'
account_prefix = 'stars'
key_name = '{{ key_name }}'
store_prefix = 'ibc'
address_type = { derivation = 'cosmos' }
default_gas = 300000
max_gas = 75000000
gas_price = { price = 0.025, denom = 'ustars' }
gas_multiplier = 1.3
max_msg_num = 30
max_tx_size = 1800000
clock_drift = '15s'
max_block_time = '10s'
trusting_period = '9days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }

[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', 'channel-146'], # Terra
]