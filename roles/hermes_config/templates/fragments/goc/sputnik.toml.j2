[[chains]]
id = 'sputnik'
rpc_addr = 'http://{{ goc_sputnik_ip }}:18057'
grpc_addr = 'http://{{ goc_sputnik_ip }}:18090'
websocket_addr = 'ws://{{ goc_sputnik_ip }}:18057/websocket'

rpc_timeout = '20s'
account_prefix = 'cosmos'
key_name = '{{ key_name }}'
address_type = { derivation = 'cosmos' }
store_prefix = 'ibc'
default_gas = 3000000
max_gas = 15000000
gas_price = { price = 0.025, denom = 'unik' }
gas_multiplier = 2.4
max_msg_num = 20
max_tx_size = 180000
clock_drift = '10s'
max_block_time = '30s'
trusting_period = '14days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }